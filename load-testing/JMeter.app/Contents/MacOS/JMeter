#!/bin/bash

# JMeter wrapper script for macOS
JMETER_PATH="/opt/homebrew/Cellar/jmeter/5.6.3/bin/jmeter"

# If a .jmx file is provided, open it
if [ "$1" != "" ] && [ -f "$1" ]; then
    echo "Opening JMeter with test plan: $1"
    "$JMETER_PATH" -t "$1"
else
    echo "Opening JMeter GUI..."
    "$JMETER_PATH"
fi





