# Example environment variables for local development
# Copy this file to .env and customize for your environment

# Keycloak Service Account for Scheduled Reports
KEYCLOAK_SERVICE_CLIENT_ID=report-scheduler-service
KEYCLOAK_SERVICE_CLIENT_SECRET=your-client-secret-here

# Email Configuration (for local testing with MailHog)
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=

# Default recipients for scheduled reports
REPORT_EMAIL_DEFAULT_RECIPIENTS=admin@example.com,another.admin@example.com

# Enable/disable scheduling and email
REPORT_SCHEDULING_ENABLED=true
REPORT_EMAIL_ENABLED=true

# Note: Never commit actual secrets to git
# Copy this file to .env and update with real values
